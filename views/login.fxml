<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <children>
      <Label layoutX="20.0" text="图书管理系统" textFill="#eb1010" translateX="-50.0" />
       <Label text="请选择登录类型" />
       <Button fx:id="adminLoginBtn" onAction="#handleAdminLogin" prefWidth="200" text="管理员登录" />
       <Button fx:id="userLoginBtn" onAction="#handleUserLogin" prefWidth="200" text="用户登录" />
   </children>
</VBox>
