<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" 
      xmlns="http://javafx.com/javafx/21" 
      fx:controller="controllers.LoginController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="请选择登录类型" />
    <Button fx:id="adminLoginBtn" text="管理员登录" onAction="#handleAdminLogin" prefWidth="200" />
    <Button fx:id="userLoginBtn" text="用户登录" onAction="#handleUserLogin" prefWidth="200" />
</VBox>
