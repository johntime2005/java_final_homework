<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" 
      xmlns="http://javafx.com/javafx/21"
      fx:controller="controllers.UserLoginController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="用户登录" />
    <TextField fx:id="usernameField" promptText="用户名" />
    <PasswordField fx:id="passwordField" promptText="密码" />
    <Button text="登录" onAction="#handleLogin" />
    <Button text="注册" onAction="#handleRegister" />
    <Button text="返回" onAction="#handleBack" />
</VBox>
